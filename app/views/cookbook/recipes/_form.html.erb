<%= form_with(model: recipe, scope: :recipe) do |form| %>

  <div class="block">
    <%= render Form::Input::ImageComponent.new(form: form, attr: :cover_image, model: recipe) %>

    <%= render Form::Input::TextComponent.new(form: form, attr: :name, model: recipe) %>

    <%= render Form::Input::LimitedTextareaComponent.new(form: form, attr: :description, model: recipe, limit: 200, fixed: true) %>

    <%= render Form::Input::NumericComponent.new(form: form, attr: :portions, model: recipe) %>

    <%= render Form::Input::RichTextareaComponent.new(form: form, attr: :preparation, model: recipe) %>
  </div>

  <div class="buttons is-centered pb-3">
    <%= form.submit class: 'button is-primary', data: { action: 'click->layout#requestFromButton' } %>
    <%= render Layout::CloseModalComponent.new %>
  </div>
<% end %>
