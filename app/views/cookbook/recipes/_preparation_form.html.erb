<%= form_for recipe,
             as: :recipe,
             url: update_preparation_cookbook_recipe_url(recipe),
             method: :put do |form| %>
  <div class="block">
    <%= render Form::Field::Component.new do |field| %>
      <%= field.label form, attr: :preparation %>

      <%= field.control do %>
        <div class="control rich-text">
          <%= render Form::Input::Textarea::RichComponent.new form, attr: :preparation %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="buttons is-centered pb-3">
    <%= form.submit class: 'button is-primary', data: { action: 'click->layout#requestFromButton' } %>
    <%= render Layout::AuxiliaryPanel::Buttons::CloseComponent.new %>
  </div>
<% end %>
