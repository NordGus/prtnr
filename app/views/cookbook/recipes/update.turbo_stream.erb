<%= turbo_stream.update :auxiliary_panel do %>
  <%= render Notices::SuccessComponent.new do %>
    <strong><%= @recipe.name %></strong> updated!
  <% end %>
<% end %>

<%= turbo_stream.replace dom_id(@recipe) do %>
  <%= render Previews::RecipeComponent.new recipe: @recipe %>
<% end %>

<%= turbo_stream.update :recipe do %>
  <%= render @recipe %>
<% end %>