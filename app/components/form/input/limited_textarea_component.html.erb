<div class="field" data-controller="input-limitable">
  <%= @form.label @attr, class: 'label' %>
  <div class="control">
    <%= @form.text_area @attr,
                        class: @input_classes,
                        data: {
                          limit: @limit,
                          input_limitable_target: 'input',
                          action: 'change->input-limitable#updateCounter keyup->input-limitable#updateCounter'
                        }
    %>
  </div>
  <p class="help" data-input-limitable-target="counter"><span class="ticker"><%= @length %></span>/<span><%= @limit %></span></p>
  <% @errors&.each do |error| %>
    <p class="help is-danger"><%= error %></p>
  <% end %>
</div>