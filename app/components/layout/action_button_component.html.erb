<%= button_to @url,
              class:      @button_class,
              form:       { id: @id },
              form_class: @form_class,
              target:     :_top,
              method:     @options[:method],
              data:       { action: 'click->layout#openModal click->layout#requestFromButton' } do %>
  <% if @icon_class.present? %>
    <span class="icon">
      <%= tag.i '', class: @icon_class %>
    </span>
  <% else %>
    <%= content %>
  <% end %>
<% end %>
